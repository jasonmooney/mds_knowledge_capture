{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Agent",
            "type": "shell",
            "command": "python",
            "args": ["src/agent.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "pytest",
            "args": ["tests/"],
            "group": "test"
        },
        {
            "label": "Update Docs",
            "type": "shell",
            "command": "mkdocs",
            "args": ["build"],
            "group": "build"
        }
    ]
}
